{
  "name": "vscode-clang",
  "displayName": "vscode-clang",
  "description": "completion and diagnostic for C/C++/Objective-C using Clang",
  "version": "0.0.2",
  "publisher": "mitaki28",
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Languages",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp",
    "onLanguage:c",
    "onLanguage:objective-c"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Clang configulation",
      "properties": {
        "clang.command": {
          "type": "string",
          "default": "clang",
          "description": "The path to the Clang executable"
        },
        "clang.cflags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Flags for C (e.g. ['-std=c99'])"
        },
        "clang.cxxflags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Flags for C++ (e.g. ['-std=c++11'])"
        },
        "clang.objcflags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Flags for Objective-C"
        }        
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^1.6.2",
    "vsce": "^1.0.0",
    "vscode": "0.10.x"
  }
}
